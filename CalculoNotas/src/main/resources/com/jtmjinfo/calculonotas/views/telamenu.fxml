               <tooltip>
                  <Tooltip text="Sair do Sistema" />
               </tooltip>
            </Button>
        </buttons>
      </ButtonBar>
      <Label alignment="CENTER" layoutX="-2.0" layoutY="50.0" prefHeight="36.0" prefWidth="617.0" text="Cadastro de Notas Linguagem de Programação I">
